    @model IEnumerable<DoctorModel>

@{
    Layout = "_HomeLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Find & Book Appointment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .hero-section {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 60px 80px;
        }

        .hero-text {
            max-width: 50%;
        }

            .hero-text h1 {
                font-weight: bold;
            }

                .hero-text h1 span {
                    color: #007bff;
                }

            .hero-text p {
                color: #6c757d;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            padding: 10px 20px;
        }

        .hero-image img {
            max-width: 100%;
            border-radius: 10px;
        }

        .navbar-nav {
            gap: 15px;
        }

        .navbar .btn-primary {
            padding: 8px 15px;
            font-size: 14px;
        }
    </style>
</head>
<body>

   

    <!-- Hero Section -->
    <section class="hero-section container mt-5">
        <div class="hero-text">
            <h1>Find & Book <span>Appointment</span> with your Fav <span>Doctors</span></h1>
            <p>Looking for the best healthcare professionals near you? Easily book an appointment with top-rated doctors in just a few clicks. Get expert medical care for you and your family today.</p>
            <a href="#" class="btn btn-primary">Explore Now</a>
        </div>
        <div class="hero-image">
            @* <img src="https://images.pexels.com/photos/8460371/pexels-photo-8460371.jpeg?auto=compress&cs=tinysrgb&w=600" alt="Doctors"> *@
            <img src="https://images.pexels.com/photos/8460371/pexels-photo-8460371.jpeg?auto=compress&cs=tinysrgb&w=600" alt="Doctors">

            
        </div>
    </section>


    <div class="container mt-4">
        <h2 class="text-center">Search <span class="text-primary">Doctors</span></h2>
        <p class="text-center">Search your doctor and book an appointment in one click</p>

       
        <!-- Search Form -->
        <form id="searchForm" method="get" action="@Url.Action("SearchDoctors", "Home")">
            <div class="row justify-content-center" style=" padding: 10px;">
                <div class="col-md-6 d-flex justify-content-center align-items-center">
                    <input type="text" name="searchName" id="searchName" class="form-control w-75" placeholder="Search by Name" />
                    <button type="submit" class="btn btn-primary ms-2">Search</button>
                </div>
            </div>
        </form>


        <!-- Doctors List -->
        <div id="doctorList">
            @Html.Partial("DoctorListPartial", Model)
        </div>

        
    </div>
  

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>




    <!-- jQuery CDN should be loaded before your script -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap 5 CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>

            $(document).ready(function () {
    $("#searchForm").on("submit", function (e) {
        e.preventDefault();  // Prevent the form from submitting normally

        var searchName = $("#searchName").val();

        // Check if the search input is empty
        if (searchName === "") {
            searchName = null; // Send null or an empty value to fetch all doctors
        }

        $.ajax({
            url: "/Home/SearchDoctors",  // Ensure the URL matches your controller method
            type: "GET",
            data: { searchName: searchName },
            success: function (data) {
                // debugger
                $("#doctorList").html(data);  // Update the doctor list with the filtered results
            },
            error: function (xhr, status, error) {
                console.error("Error fetching doctors:", error);
            }
        });
    });
});

    </script>
    

</body>
</html>
