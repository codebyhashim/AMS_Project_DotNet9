    <style>
        body {
            font-family: Arial, sans-serif;
        }

        footer {
            background-color: #007bff;
            /* background-color: gray; */
            color: white;
            position: relative;
            padding: 20px 0;
        }

        #backToTop {
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
        }

        .hero-section {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 60px 80px;
        }

        .hero-text {
            max-width: 50%;
        }

            .hero-text h1 {
                font-weight: bold;
            }

                .hero-text h1 span {
                    color: #007bff;
                }

            .hero-text p {
                color: #6c757d;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            padding: 10px 20px;
        }

        .hero-image img {
            max-width: 100%;
            border-radius: 10px;
        }

        .navbar-nav {
            gap: 15px;
        }

        .navbar .btn-primary {
            padding: 8px 15px;
            font-size: 14px;
        }

        .rotate-15 {
            display: inline-block;
            transform: rotate(-15deg);
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
    <div class="container">
        <a class="navbar-brand fw-bold text-primary" href="#">
                <div class="sidebar-brand-icon rotate-n-15 ">
                    <i style="font-size:25px" class="rotate-15  fas fa-plus-circle"></i>  HealthConnect
            @* <div class="sidebar-brand-text mx-3"> HealthConnect </div> *@
            </div>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <!-- Left side (me-auto pushes it left) -->
            <ul class="navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link" href="/Home/Index">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="#">About</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Explore</a></li>

                @if (SignInManager.IsSignedIn(User))
                {
                    var currentUser = await UserManager.GetUserAsync(User);
                    var roles = await UserManager.GetRolesAsync(currentUser);

                    if (roles.Contains("Admin"))
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                    }
                    else if (roles.Contains("Doctor"))
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Doctor" asp-action="Index">Dashboard</a></li>
                    }
                    else if (roles.Contains("Patient"))
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Patient" asp-action="MakeAppoinment">Dashboard</a></li>
                    }
                }
            </ul>

            <!-- Right side (ms-auto pushes it right) -->
            <ul class="navbar-nav ms-auto">
                <partial name="_LoginPartial" />
            </ul>
        </div>
    </div>
</nav>

